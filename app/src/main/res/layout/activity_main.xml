<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:background="	#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">    </LinearLayout>


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="right"
        android:background="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="	#000000"
        android:id="@+id/subTextView" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:layout_weight="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/seven_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"

                android:textSize="0sp"
                app:srcCompat="@drawable/nana" />

            <ImageButton
                android:id="@+id/eight_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/hati" />

            <ImageButton
                android:id="@+id/nine_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/ku" />



            <ImageButton
                android:id="@+id/ac_button"
                android:layout_width="0dp"
                android:backgroundTint="#00000000"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/ac" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >


            <ImageButton
                android:id="@+id/four_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/yon" />

            <ImageButton
                android:id="@+id/five_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/go" />

            <ImageButton
                android:id="@+id/six_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/roku" />

            <ImageButton
                android:id="@+id/mul_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/kakeru" />

            <ImageButton
                android:id="@+id/div_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/waru" />



        </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >


            <ImageButton
                android:id="@+id/one_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/iti" />

            <ImageButton
                android:id="@+id/two_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/ni" />

            <ImageButton
                android:id="@+id/three_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/san" />

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/tasu" />

            <ImageButton
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/huku" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >


            <ImageButton
                android:id="@+id/zero_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/zero" />

            <ImageButton
                android:id="@+id/dot_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/ten" />

            <ImageButton
                android:id="@+id/zei_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/zei" />

            <ImageButton
                android:id="@+id/equal_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/ikoru" />


        </TableRow>

    </TableLayout>

</LinearLayout>